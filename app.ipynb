import streamlit as st
import pandas as pd
import matplotlib.pyplot as plt

# Load final dataset
df = pd.read_csv("dataset/final_livability.csv")

st.set_page_config(page_title="UrbanNest", layout="centered")

st.title("üèôÔ∏è UrbanNest ‚Äì Neighborhood Livability Explorer")

st.markdown("""
UrbanNest helps users compare Pune localities using a data-driven livability score
based on housing affordability and air quality.
""")

# Select BHK type
bhk = st.selectbox("Select BHK Type", sorted(df["bhk"].unique()))

filtered = df[df["bhk"] == bhk]

st.subheader("Top 10 Livable Localities")

top10 = filtered.sort_values("Livability_Score", ascending=False).head(10)

st.dataframe(
    top10[["locality", "Livability_Score"]],
    use_container_width=True
)

st.subheader("Livability Score Comparison")

plt.figure(figsize=(8, 4))
plt.bar(top10["locality"], top10["Livability_Score"])
plt.xticks(rotation=45)
plt.ylabel("Livability Score")
plt.tight_layout()
st.pyplot(plt)

st.markdown("""
### Livability Score Formula

**Livability = 0.6 √ó Affordability + 0.4 √ó AQI**

Higher score indicates better overall livability.
""")
